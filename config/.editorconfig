root = true

[*]
charset=utf-8
end_of_line=lf

[*.odin]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace=true
insert_final_newline=false

[*.py]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace=true
insert_final_newline=true

[*.hs]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace=true
insert_final_newline=true

[*.{c,cpp,cppm,m,h,hpp,hhh,hh,cu,cuda}]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace=true
insert_final_newline=false

[*.{ml,mli}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace=true
insert_final_newline=false

[*.{toml,rs}]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace=true
insert_final_newline=false

[*.{vimrc,vim}]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace=false
insert_final_newline=false

[Makefile]
indent_style = tab
indent_size = 4
tab_width = 4
trim_trailing_whitespace=true
insert_final_newline=false
